{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2022",
    "outDir": "./dist",
    "baseUrl": "./",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "paths": {
      "@module/*": [
        "src/module/*"
      ],
      "@route/*": [
        "src/route/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}